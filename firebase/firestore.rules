rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Public read access for event/page data; no client writes
    match /events/{eventId} {
      allow read: if true;
      allow write: if false;
    }

    match /pages/{pageId} {
      allow read: if true;
      allow write: if false;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}