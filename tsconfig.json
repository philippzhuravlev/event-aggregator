{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@api/*": ["api/*"],
      "@shared/*": ["api/_shared/*"],
      "@event-aggregator/shared/*": ["packages/shared/src/*"]
    }
  },
  "files": [],
  "references": [
    { "path": "./api/tsconfig.json" }
  ]
}
