{
  "name": "dtuevent",
  "version": "1.0.0",
  "description": "This website will be a central registry for Technical University of Denmark (DTU)'s campus events from bars and cafes. JS/Node.js/REACT/Tailwind frontend, Supabase backend for hosting and DB. The site pulls through facebook's API from a number of DTU Campus bars and nearby form bars. Can be filtered by Lyngby Campus, Ballerup Campus and Dorms.",
  "main": "index.js",
  "workspaces": [
    "packages/shared"
  ],
  "scripts": {
    "test": "npm run test:api && npm run test:shared && npm run test:supabase",
    "test:coverage": "npm run test:api:coverage && npm run test:shared:coverage && npm run test:supabase:coverage",
    "test:api": "vitest run api/",
    "test:api:watch": "vitest api/",
    "test:api:coverage": "vitest run --coverage --coverage.include=api/**/*.ts --coverage.thresholds.lines=0 --coverage.thresholds.functions=0 --coverage.thresholds.branches=0 --coverage.thresholds.statements=0 api/",
    "test:shared": "vitest run packages/shared/tests",
    "test:shared:watch": "vitest packages/shared/tests",
    "test:shared:coverage": "vitest run --coverage --coverage.include=packages/shared/src/**/*.ts --coverage.exclude=**/supabase/** packages/shared/tests",
    "test:supabase": "deno task -c supabase/deno.json test",
    "test:supabase:coverage": "deno task -c supabase/deno.json test:coverage",
    "postinstall": "npm --prefix ./web ci",
    "build": "npm --prefix ./packages/shared run build && npm --prefix ./web run build",
    "ingest:facebook": "node ./tools/ingest-facebook.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/philippzhuravlev/DTUEvent.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/philippzhuravlev/DTUEvent/issues"
  },
  "homepage": "https://github.com/philippzhuravlev/DTUEvent#readme",
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.15",
    "node-fetch": "^3.3.2",
    "supabase": "^2.54.11",
    "vite": "^7.1.12",
    "vite-tsconfig-paths": "^5.1.1",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@event-aggregator/shared": "file:packages/shared",
    "@supabase/supabase-js": "^2.45.0",
    "axios": "^1.12.2",
    "dotenv": "^17.2.3",
    "express": "^5.1.0"
  },
  "overrides": {
    "punycode": "^2.3.1"
  }
}
