{
  "compilerOptions": {
    "lib": ["deno.window", "deno.unstable"],
    "strict": true
  },
  "tasks": {
    "test": "deno task test:unit && deno task test:integration",
    "test:unit": "deno test --no-check --allow-env --allow-net --allow-read --quiet --ignore=functions/tests/integration functions/tests",
    "test:integration": "deno test --allow-env --allow-net --allow-read --quiet functions/tests/integration",
    "test:coverage": "deno test --no-check --allow-env --allow-net --allow-read --quiet --coverage=coverage functions/tests && deno coverage coverage"
  },
  "imports": {
    "std/": "https://deno.land/std@0.208.0/",
    "@supabase/supabase-js": "npm:@supabase/supabase-js@^2.81.1",
    "@event-aggregator/shared": "./functions/packages/shared/dist/index.js",
    "@event-aggregator/shared/": "./functions/packages/shared/dist/",
    "@event-aggregator/shared/services/index.js": "./functions/packages/shared/dist/services/index.js",
    "@event-aggregator/shared/services/logger-service.js": "./functions/packages/shared/dist/services/logger-service.js",
    "@event-aggregator/shared/utils/token-expiry.js": "./functions/packages/shared/dist/utils/token-expiry.js",
    "@event-aggregator/shared/utils/event-normalizer.js": "./functions/packages/shared/dist/utils/event-normalizer.js",
    "@event-aggregator/shared/utils/sanitizer-util.js": "./functions/packages/shared/dist/utils/sanitizer-util.js",
    "@event-aggregator/shared/validation/index.js": "./functions/packages/shared/dist/validation/index.js",
    "@event-aggregator/shared/validation/rate-limit-validation.js": "./functions/packages/shared/dist/validation/rate-limit-validation.js",
    "@event-aggregator/shared/runtime/deno.js": "./functions/packages/shared/dist/runtime/deno.js",
    "@event-aggregator/shared/runtime/browser.ts": "../packages/shared/src/runtime/browser.ts",
    "@event-aggregator/shared/types": "./functions/packages/shared/dist/types.js",
    "@event-aggregator/shared/types.ts": "../packages/shared/src/types.ts",
    "@event-aggregator/shared/config/index.ts": "../packages/shared/src/config/index.ts",
    "@event-aggregator/shared/src/services/facebook-service.ts": "../packages/shared/src/services/facebook-service.ts",
    "@event-aggregator/shared/src/": "../packages/shared/src/"
  }
}
